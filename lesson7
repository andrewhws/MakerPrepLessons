//Exercise 4


var hero, badGuy;

hero = prompt("is the hero 'strong' or 'weak'?");
badGuy = prompt("is the badGuy 'strong' or 'weak'?");

if (hero === "strong" || hero === "weak" ) {
  
  if (badGuy === "weak" && hero === "strong") {
    console.log("aha an easy victory");
  
  } else if (hero === "weak" && badGuy === "weak" || hero === "strong" && badGuy === "strong") {
  console.log("let us battle to the death");
  }
  else if (hero === "weak" && badGuy === "strong") {
    console.log("the bad guy wins");
  }
  
} else {console.log("I don't recognize your response");}

//Exercise 6 pseudo code conditional


