date = prompt("are you financially stable?");
personality = prompt("are you a jerk");

if (date === "yes" && personality === "no") {
  
  console.log("I'm super excited to go");
}

  else if (date === "no" || personality === "yes") {
    myDates = prompt("how many dates have I had this week?");
  plans = prompt("do you have any plans?");
  
    if (meDates < 3 || plans === "no") {
  console.log("I'll go but not excited");
  } else {
  console.log("no thank you I will not go");
    }  
    
 }  else console.log("I don't understand your response");


